{% extends 'base.html.twig' %}

{% block title %}Application Styleguide{% endblock %}

{% block body %}
    <div class="container-xl">
        <div class="page-header">
            <h1 class="page-title">Styleguide</h1>
        </div>

        {# Section pour les Boutons #}
        <h2 class="page-title mt-4">Buttons</h2>
        <div class="row g-2 align-items-center">
            <div class="col-auto">
                <button class="btn btn-primary">Primary</button>
            </div>
            <div class="col-auto">
                <button class="btn btn-secondary">Secondary</button>
            </div>
            <div class="col-auto">
                <button class="btn btn-danger">
                    <twig:ux:icon name="tabler:trash" class="me-2" />
                    Delete
                </button>
            </div>
        </div>

        {# Section pour les Alertes (via notre composant Twig) #}
        <h2 class="page-title mt-4">Alerts</h2>
        <twig:Alert type="success" message="This is a success message." />
        <twig:Alert type="warning" message="This is a warning message." />
        <twig:Alert type="danger" message="This is a danger message." />

        {# Section pour les Ic√¥nes #}
        <h2 class="page-title mt-4">Icons</h2>
        <div class="d-flex gap-3">
            <twig:ux:icon name="tabler:home" width="32" height="32" />
            <twig:ux:icon name="tabler:user" width="32" height="32" />
            <twig:ux:icon name="tabler:settings" width="32" height="32" />
            <twig:ux:icon name="tabler:logout" width="32" height="32" />
        </div>
    </div>
{% endblock %}
