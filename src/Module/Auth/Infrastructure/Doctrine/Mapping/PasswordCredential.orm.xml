<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Module\Auth\Domain\PasswordCredential" table="auth_password_credentials">
        <embedded name="id" class="App\Module\SharedContext\Domain\ValueObject\UserId" use-column-prefix="false" />

        <embedded name="password" class="App\Module\Auth\Domain\ValueObject\HashedPassword" use-column-prefix="false" />

        <one-to-one field="id" target-entity="App\Module\Auth\Domain\UserAccount">
            <join-column name="id" referenced-column-name="id" on-delete="CASCADE" />
        </one-to-one>
    </entity>
</doctrine-mapping>
