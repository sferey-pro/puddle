{% extends '@Authentication/base.html.twig' %}

{% block title %}Verify Code{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h1 class="h3 text-center mb-4">Enter verification code</h1>
                    <p class="text-muted text-center mb-4">
                        We sent a code to {{ phone }}
                    </p>

                    {{ form_start(form, {'attr': {'id': 'otp-form'}}) }}
                        {{ form_row(form.code) }}
                        {{ form_row(form.phone) }}

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            Verify
                        </button>
                    {{ form_end(form) }}

                    <div class="text-center">
                        <p class="text-muted mb-2">Didn't receive the code?</p>
                        <button type="button" class="btn btn-link" id="resend-code">
                            Send new code
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('resend-code').addEventListener('click', async function() {
    const phone = document.querySelector('[name="otp_verification[phone]"]').value;

    try {
        const response = await fetch('{{ path("passwordless_resend_otp") }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'X-CSRF-Token': '{{ csrf_token("resend_otp") }}'
            },
            body: 'phone=' + encodeURIComponent(phone)
        });

        const data = await response.json();

        if (response.ok) {
            alert('New code sent!');
        } else {
            alert(data.error || 'Failed to send code');
        }
    } catch (error) {
        alert('An error occurred');
    }
});
</script>
{% endblock %}
