<form class="form-inline" method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-block btn-danger"><twig:ux:icon name="trash"/> {{ 'action.delete_product'|trans }}</button>
</form>
