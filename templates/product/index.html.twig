{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body_id 'product_index' %}

{% block main %}
    <h1 class="mt-5">Product index</h1>

    <table class="table table-striped table-middle-aligned table-borderless table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
                <th scope="col">Slug</th>
                <th scope="col">CreatedAt</th>
                <th scope="col">UpdatedAt</th>
                <th scope="col" class="text-center"><twig:ux:icon name="settings" /> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr id="product_{{ product.id }}">
                {{ include('product/_product_item.html.twig', { product: product}) }}
            </tr>
        {% else %}
            <tr>
                <td colspan="8">{{ 'default.no_record_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_new') }}">Create new</a>
{% endblock %}
