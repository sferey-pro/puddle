<div class="btn-group gap-2">
    {% if (withShow is defined) %}
        <a href="{{ path(withShow, {id: item.id}) }}" class="btn btn-block btn-light">
            <twig:ux:icon name="tabler:eye"/> {{ 'action.show'|trans }}
        </a>
    {% endif %}

    {% if (withEdit is defined) %}
        <a href="{{ path(withEdit, {id: item.id}) }}" class="btn btn-block btn-primary">
            <twig:ux:icon name="tabler:pencil"/> {{ 'action.edit'|trans }}
        </a>
    {% endif %}

    {% if (withDelete is defined) %}
        <form class="form-inline" method="post" action="{{ path(withDelete, {id: item.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
            <button class="btn btn-block btn-danger"><twig:ux:icon name="tabler:trash"/> {{ 'action.delete'|trans }}</button>
        </form>
    {% endif %}

    {% if (withDuplicate is defined) %}
        <form class="form-inline" method="post" action="{{ path(withDuplicate, {id: item.id}) }}" onsubmit="return confirm('Are you sure you want to duplicate this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('duplicate' ~ item.id) }}">
            <button class="btn btn-block btn-warning"><twig:ux:icon name="tabler:copy"/> {{ 'action.duplicate'|trans }}</button>
        </form>
    {% endif %}

    {% if (withBackToList is defined) %}
        <twig:Button:BackToList routeName="{{ withBackToList }}" />
    {% endif %}
</div>
