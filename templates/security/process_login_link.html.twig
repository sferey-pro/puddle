{% extends 'security/base.html.twig' %}

{% block title %}Process Login{% endblock %}

{% block body_id 'process_login' %}

{% block body %}
    <div class="container my-5">
        <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
        <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
            <h1 class="display-4 fw-bold lh-1 text-body-emphasis">Bonjour ! </h1>
            <p class="lead">Vous êtes sur le point de vous connecter à Puddle</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
                <form action="{{ path('app_login_check') }}" method="POST">
                    <input type="hidden" name="expires" value="{{ expires }}">
                    <input type="hidden" name="user" value="{{ user }}">
                    <input type="hidden" name="hash" value="{{ hash }}">

                    <button type="submit" class="btn btn-primary btn-lg px-4 me-md-2 fw-bold">Continuer</button>
                </form>
            </div>
        </div>
        <div class="col-lg-4 offset-lg-1 p-0 overflow-hidden shadow-lg rounded">
            <img class="rounded-lg-3" src="{{ asset('images/ia_images/img2.png') }}" alt="" width="720">
        </div>
        </div>
    </div>
{% endblock %}
