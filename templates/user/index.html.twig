{% extends 'layout.html.twig' %}

{% block title %}User index{% endblock %}

{% block body_id 'user_index' %}

{% block main %}
    <h1 class="mt-5">User index</h1>

    <table class="table table-striped table-middle-aligned table-borderless table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">Uuid</th>
                <th scope="col">Roles</th>
                <th scope="col">IsVerified</th>
                <th scope="col" class="text-center"><twig:ux:icon name="settings" /> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr id="user_{{ user.id }}">
                {{ include('user/_user_item.html.twig', { user: user}) }}
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
