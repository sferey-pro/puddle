{% set _route = app.current_route %}
<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Puddle</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link{{ _route == 'app_homepage' ? ' active' : '' }}" aria-current="page" href="{{ path('app_homepage') }}">{{ 'menu.home'|trans }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link{{ _route == 'user_index' ? ' active' : '' }}" href="{{ path('user_index') }}">{{ 'menu.users'|trans }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link{{ _route == 'app_product_index' ? ' active' : '' }}" href="{{ path('app_product_index') }}">{{ 'menu.products'|trans }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link{{ _route == 'app_raw_material_index' ? ' active' : '' }}" href="{{ path('app_raw_material_index') }}">{{ 'menu.raw_materials'|trans }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link{{ _route == 'app_additional_cost_index' ? ' active' : '' }}" href="{{ path('app_additional_cost_index') }}">{{ 'menu.app_additional_cost'|trans }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link{{ _route == 'app_supplier_index' ? ' active' : '' }}" href="{{ path('app_supplier_index') }}">{{ 'menu.suppliers'|trans }}</a>
          </li>
        </ul>
        <ul class="navbar-nav">
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <li class="nav-item">
                <a class="nav-link" href="{{ logout_path() }}">
                    <twig:ux:icon name="tabler:logout"/> {{ 'menu.logout'|trans }}
                </a>
            </li>
            {% else %}
            <li class="nav-item">
                <a class="nav-link{{ _route == 'app_register' ? ' active' : '' }}" aria-current="page" href="{{ path('app_register') }}">{{ 'menu.register'|trans }}</a>
            </li>
            <li class="nav-item">
                <a class="nav-link{{ _route == 'app_login' ? ' active' : '' }}" aria-current="page" href="{{ path('app_login') }}">{{ 'menu.login'|trans }}</a>
            </li>
            {% endif %}
        </ul>
      </div>
    </div>
  </nav>
