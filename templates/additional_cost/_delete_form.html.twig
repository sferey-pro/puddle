<form class="form-inline"method="post" action="{{ path('app_additional_cost_delete', {'id': additional_cost.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ additional_cost.id) }}">
    <button class="btn btn-block btn-danger"><twig:ux:icon name="trash"/> {{ 'action.delete'|trans }}</button>
</form>
