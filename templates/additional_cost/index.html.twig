{% extends 'layout.html.twig' %}

{% block title %}AdditionalCost index{% endblock %}

{% block body_id 'additional_cost_index' %}

{% block main %}
    <twig:Semantic:Title content="{{ 'additional_cost.index' | trans }}" />

    <table class="table table-striped table-middle-aligned table-borderless table-hover">
        <thead>
            <tr>
                <th scope="col">Type</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Id</th>
                <th scope="col">Uuid</th>
                <th scope="col">CreatedAt</th>
                <th scope="col">UpdatedAt</th>
                <th scope="col" class="text-end"><twig:ux:icon name="settings" /> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for additional_cost in additional_costs %}
            <tr id="additional_cost_{{ additional_cost.id }}">
                {{ include('additional_cost/_item.html.twig', { additional_cost: additional_cost }) }}
            </tr>
        {% else %}
            <tr>
                <td colspan="8">{{ 'default.no_record_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <twig:Button:CreateNew routeName='app_additional_cost_new' />
{% endblock %}
